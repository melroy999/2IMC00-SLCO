					from q2 to q3 {
						[step[j-1] := 2;k := 0]
					}
	
					from q3 to q3 {
						[k < 4 and (k = 2 or pos[k] < j); k := k+1]
					}
	
					from q3 to wait {
						[step[j-1] <> 2 or k = 4; j := j+1]
					}
	
					from wait to CS {
						[j = 4]
					}
	
					from CS to NCS {
						[pos[2] := 0]
					}
	
				}
	
			P_3 {
				variables
					Integer j := 0
