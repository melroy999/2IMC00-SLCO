model peterson.4 {
classes
	GlobalClass {
		variables
			Integer[4] pos
			Integer[4] step
		state machines
			P_0 {
				variables
					Integer j := 0
					Integer k := 0
				initial NCS
				states  CS wait q2 q3
				transitions
					from NCS to wait {
						[j := 1]
					}
	
					from wait to q2 {
						[j < 4; pos[0] := j]
					}
	
					from q2 to q3 {
						[step[j-1] := 0;k := 0]
					}
	
					from q3 to q3 {
						[k < 4 and (k = 0 or pos[k] < j); k := k+1]
					}
	
					from q3 to wait {
						[step[j-1] <> 0 or k = 4; j := j+1]
					}
	
					from wait to CS {
						[j = 4]
					}
	
					from CS to NCS {
						[pos[0] := 0]
					}
	
				}
	
			P_1 {
				variables
					Integer j := 0
					Integer k := 0
				initial NCS
				states  CS wait q2 q3
				transitions
