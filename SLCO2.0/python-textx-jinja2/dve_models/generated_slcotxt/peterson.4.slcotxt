					from wait to q2 {
						[j < 4; pos[3] := j]
					}
	
					from q2 to q3 {
						[step[j-1] := 3;k := 0]
					}
	
					from q3 to q3 {
						[k < 4 and (k = 3 or pos[k] < j); k := k+1]
					}
	
					from q3 to wait {
						[step[j-1] <> 3 or k = 4; j := j+1]
					}
	
					from wait to CS {
						[j = 4]
					}
	
					from CS to NCS {
						[pos[3] := 0]
					}
	
				}
	
	}

objects
	globalObject : GlobalClass
}
