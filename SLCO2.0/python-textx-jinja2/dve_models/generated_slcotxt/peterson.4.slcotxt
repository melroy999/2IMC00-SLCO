						[j < 4; pos[1] := j]
					}
	
					from q2 to q3 {
						[step[j-1] := 1;k := 0]
					}
	
					from q3 to q3 {
						[k < 4 and (k = 1 or pos[k] < j); k := k+1]
					}
	
					from q3 to wait {
						[step[j-1] <> 1 or k = 4; j := j+1]
					}
	
					from wait to CS {
						[j = 4]
					}
	
					from CS to NCS {
						[pos[1] := 0]
					}
	
				}
	
			P_2 {
				variables
					Integer j := 0
					Integer k := 0
				initial NCS
