model TestA {
  classes
  P {
		variables Integer x y Integer[2] v
    state machines
    SM0 {
			variables Integer b := 0
      initial S0
      states S1 S2 S3 S4 S5
			transitions
      S0 -> S1 {
        x := (x+1) % 2
      }
      S1 -> S2 {
				x = 0
			}
			S2 -> S3 {
				v[b] := 0
			}
			S3 -> S4 {
				b := (b+1) % 2
			}
			S4 -> S5 {
				y := (y+1) % 2
			}
			S5 -> S0 {
				y = 0
			}
    }

    SM1 {
			variables Integer b := 1
      initial S0
      states S1 S2 S3 S4 S5
			transitions
      S0 -> S1 {
        x := (x+1) % 2
      }
      S1 -> S2 {
				x = 0
			}
			S2 -> S3 {
				v[b] := 0
			}
			S3 -> S4 {
				b := (b+1) % 2
			}
			S4 -> S5 {
				y := (y+1) % 2
			}
			S5 -> S0 {
				y = 0
			}
    }
  }
  objects p: P()
}
