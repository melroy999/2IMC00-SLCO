model dve_anderson_2 {
classes
	GlobalClass {
		variables
			Byte[3] Slot := [1,0,0]
			Byte next := 0
		state machines
			P_0 {
				variables
					Byte myplace
				initial NCS
				states  p1 p2 p3 CS
				transitions
					from NCS to p1 {
						[myplace := next;next := next+1]
					}

					from p1 to p2 {
						[myplace = 3-1; next := next-3]
					}

					from p1 to p2 {
						[myplace <> 3-1; myplace := myplace%3]
					}

					from p2 to p3 {
						Slot[myplace] = 1
					}

					from p3 to CS {
						[Slot[myplace] := 0]
					}

					from CS to NCS {
						[Slot[(myplace+1)%3] := 1]
					}

				}
	
			P_1 {
				variables
					Byte myplace
				initial NCS
				states  p1 p2 p3 CS
				transitions
					from NCS to p1 {
						[myplace := next;next := next+1]
					}

					from p1 to p2 {
						[myplace = 3-1; next := next-3]
					}

					from p1 to p2 {
						[myplace <> 3-1; myplace := myplace%3]
					}

					from p2 to p3 {
						Slot[myplace] = 1
					}

					from p3 to CS {
						[Slot[myplace] := 0]
					}

					from CS to NCS {
						[Slot[(myplace+1)%3] := 1]
					}

				}
	
			P_2 {
				variables
					Byte myplace
				initial NCS
				states  p1 p2 p3 CS
				transitions
					from NCS to p1 {
						[myplace := next;next := next+1]
					}

					from p1 to p2 {
						[myplace = 3-1; next := next-3]
					}

					from p1 to p2 {
						[myplace <> 3-1; myplace := myplace%3]
					}

					from p2 to p3 {
						Slot[myplace] = 1
					}

					from p3 to CS {
						[Slot[myplace] := 0]
					}

					from CS to NCS {
						[Slot[(myplace+1)%3] := 1]
					}

				}
	
	}

objects
	globalObject : GlobalClass()
}
