model toolpaper-example {
  actions init sa ra
  classes
	  Q {
		  variables
			  Integer x y
		  state machines
		  C1 {
				variables Boolean started := false
				initial Com0 states Com1 Com2
				transitions
					Com0 -> Com1 {
						sa; started := true
					}
					Com1 -> Com1 {
						[x > 0; x := x - 1; y := y + 1];
						sa
					}
					1: Com1 -> Com2 {
						ra
					}
					Com2 -> Com0 {
						init
					}
			}
	}

objects
	q: Q(10, 0)
}
